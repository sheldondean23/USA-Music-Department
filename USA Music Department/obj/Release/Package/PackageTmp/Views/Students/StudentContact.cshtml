@model USA_Music_Department.Models.db.StudentContact

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">New Contact Information</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>StudentContact</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.HiddenFor(model => model.StudentId)
        </div>

        <div class="form-group">
            @Html.HiddenFor(model => model.ContactedBy)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ContactedDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ContactedDate, new { htmlAttributes = new { @class = "form-control datepicker" } })
                @Html.ValidationMessageFor(model => model.ContactedDate, "", new { @class = "text-danger" })
                @Html.Label("Ex: ('MM/DD/YYYY')")
            </div>
            
        </div>

        <div class="form-group">
            @Html.Label("Method of Contact", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="form-control" name="ContactedMedium">
                    <option value="Phone">Phone</option>
                    <option value="E-mail">E-mail</option>
                    <option value="In Person">In Person</option>
                </select>
                @Html.ValidationMessageFor(model => model.ContactedMedium, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
