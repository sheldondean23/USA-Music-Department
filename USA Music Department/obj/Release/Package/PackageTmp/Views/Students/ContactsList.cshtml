@model IEnumerable<USA_Music_Department.Models.db.ContactList>

@{
    ViewBag.Title = "Contacts List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Contact List</h2>
@Html.ActionLink("Add Contact", "StudentContact", new { id = ViewBag.Id }, new { @class = "btn btn-default glyphicon-plus" })
<table  class="table sortable tablefit" width="100%">
    <tr>
        <th>
            @Html.Label("Contacted Date")
        </th>
        <th>
            @Html.Label("Method of Contact")
        </th>
        <th>
            @Html.Label("Employee Name")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ContactedDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContactMedium)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeName)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.StudentContactId }) |
            @Html.ActionLink("Details", "Details", new { id=item.StudentContactId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.StudentContactId })*@
        </td>
    </tr>
}

</table>

<div>@Html.ActionLink("Back to List", "Index")</div>
